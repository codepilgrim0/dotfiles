#!/bin/bash

echo "Installing general dependencies..."
sudo apt-get update
sudo apt-get upgrade
sudo apt install -y zsh tree-sitter-cli curl ripgrep fzf gcc npm nodejs fd-find w3m ddgr tldr python3 python3-pip pipx unzip
echo "General dependencies installed"

mkdir $HOME/code

# Install Neovim
if ! type nvim; then
  echo "Installing nvim..."
  curl -LO https://github.com/neovim/neovim/releases/latest/download/nvim-linux-x86_64.tar.gz
  sudo rm -rf /opt/nvim-linux-x86_64
  sudo tar -C /opt -xzf nvim-linux-x86_64.tar.gz
  rm nvim-linux-x86_64.tar.gz
  echo "nvim installed!"
fi

# Install Lazygit
if ! type lazygit; then
  echo "Installing lazygit..."
  LAZYGIT_VERSION=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | \grep -Po '"tag_name": *"v\K[^"]*')
  curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/download/v${LAZYGIT_VERSION}/lazygit_${LAZYGIT_VERSION}_Linux_x86_64.tar.gz"
  tar xf lazygit.tar.gz lazygit
  sudo install lazygit -D -t /usr/local/bin/
  rm lazygit.tar.gz
  echo "lazygit installed!"
fi

# Install tree-sitter-cli
if ! type lazygit; then
  echo "Installing tree-sitter-cli..."
  sudo npm install tree-sitter-cli -g
  echo "tree-sitter-cli installed!"
fi

# Install Oh-my-zsh
if [ ! -d $HOME/.oh-my-zsh ]; then
  echo "Installing oh-my-zsh..."
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
  echo "oh-my-zsh installed!"
fi

# Install tmux
if ! type tmux; then
  echo "Installing tmux..."
  sudo apt install -y tmux
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
  echo "tmux installed!"
fi

# Install aichat
if ! type aichat; then
  echo "Installing aichat..."
  wget https://github.com/sigoden/aichat/releases/download/v0.30.0/aichat-v0.30.0-x86_64-unknown-linux-musl.tar.gz
  tar xvf aichat-v0.30.0-x86_64-unknown-linux-musl.tar.gz
  mv aichat ~/code/aichat
  rm aichat-v0.30.0-x86_64-unknown-linux-musl.tar.gz
  echo "aichat installed!"
fi

# Install java dependencies
sudo apt install maven -y

if ! type java; then
  echo "Installing java 25..."
  wget https://download.oracle.com/java/25/latest/jdk-25_linux-x64_bin.tar.gz
  tar xvf jdk-25_linux-x64_bin.tar.gz
  sudo mv jdk-25 /opt/
  rm -rf jdk-25_linux-x64_bin.tar.gz
  echo "java 25 installed!"

  echo "Installing java 21..."
  wget https://download.oracle.com/java/21/archive/jdk-21.0.7_linux-x64_bin.tar.gz
  tar xvf jdk-21.0.7_linux-x64_bin.tar.gz
  sudo mv jdk-21.0.7 /opt/
  rm -rf jdk-21.0.7_linux-x64_bin.tar.gz
  echo "java 21 installed!"
fi

# Install Java version manager
if ! type jenv; then
  echo "Installing jenv..."
  git clone https://github.com/jenv/jenv.git ~/.jenv
  echo "jenv installed!"

  echo "setting up java versions on jenv..."
  jenv add /opt/jdk-21.0.7/
  jenv add /opt/jdk-25/
fi

# Install Node version manager
if ! type n; then
  echo "Installing n..."
  npm i -g n
  echo "n installed!"
fi

# Create symlinks
current_directory=$(pwd)
echo "Removing existing config files"
rm -rf $HOME/.config/nvim
rm -rf $HOME/.zshrc
rm -rf $HOME/.tmux.conf
rm -rf $HOME/.w3m

echo "Creating sym links..."
ln -sf $current_directory/nvim $HOME/.config/nvim
ln -sf $current_directory/.zshrc $HOME/.zshrc
ln -sf $current_directory/.tmux.conf $HOME/.tmux.conf
ln -sf $current_directory/.w3m $HOME/.w3m
echo "Sym links created!"

zsh
